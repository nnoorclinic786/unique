{
  "entities": {
    "SuperAdmin": {
      "title": "Super Admin",
      "description": "Represents a Super Admin with complete control over the platform.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Super Admin." },
        "email": { "type": "string", "format": "email", "description": "Email address of the Super Admin." },
        "name": { "type": "string", "description": "Name of the Super Admin." }
      },
      "required": ["id", "email", "name"]
    },
    "Worker": {
      "title": "Worker",
      "description": "Represents a worker with specific roles like Pharmacist, Stock Manager, or Delivery Person.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Worker." },
        "email": { "type": "string", "format": "email", "description": "Email address of the Worker." },
        "name": { "type": "string", "description": "Name of the Worker." },
        "role": { 
          "type": "string", 
          "description": "The role of the worker.",
          "enum": ["Pharmacist", "Stock Manager", "Delivery Person"]
        },
        "permissions": {
            "type": "array",
            "items": { "type": "string" },
            "description": "A list of permissions assigned to this worker role."
        }
      },
      "required": ["id", "email", "name", "role", "permissions"]
    },
    "Buyer": {
      "title": "Buyer",
      "description": "Represents a customer who purchases medicine.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Buyer." },
        "email": { "type": "string", "format": "email", "description": "Email address of the Buyer." },
        "name": { "type": "string", "description": "Name of the Buyer." }
      },
      "required": ["id", "email", "name"]
    },
    "Medicine": {
      "title": "Medicine",
      "description": "Represents a medicine in the catalog.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Name of the medicine." },
        "description": { "type": "string", "description": "Detailed description of the medicine." },
        "dosage": { "type": "string", "description": "Dosage information (e.g., 500mg)." },
        "price": { "type": "number", "description": "Price of the medicine." },
        "stockLevel": { "type": "number", "description": "Current stock level." },
        "manufacturer": { "type": "string", "description": "Manufacturer of the medicine." },
        "prescriptionRequired": { "type": "boolean", "description": "Indicates if a prescription is required." },
        "category": { "type": "string", "description": "Medicine category (e.g., Antibiotic, Analgesic)." },
        "activeIngredient": { "type": "string", "description": "The primary active ingredient." }
      },
      "required": ["name", "price", "stockLevel", "manufacturer", "prescriptionRequired"]
    },
    "Order": {
        "title": "Order",
        "description": "Represents an order placed by a Buyer.",
        "type": "object",
        "properties": {
            "buyerId": { "type": "string", "description": "The ID of the buyer who placed the order." },
            "status": {
                "type": "string",
                "enum": ["Pending Verification", "Verified", "Awaiting Payment", "Paid", "Processing", "In Transit", "Delivered", "Cancelled"],
                "description": "The current status of the order."
            },
            "orderDate": { "type": "string", "format": "date-time", "description": "The date and time the order was placed." },
            "totalAmount": { "type": "number", "description": "The total amount of the order." },
            "prescriptionImageUrl": { "type": "string", "description": "URL of the uploaded prescription image." },
            "prescriptionPatientName": { "type": "string", "description": "Patient's name on the prescription." },
            "prescriptionDoctorName": { "type": "string", "description": "Doctor's name on the prescription." },
            "prescriptionDate": { "type": "string", "format": "date", "description": "Date the prescription was issued." }
        },
        "required": ["buyerId", "status", "orderDate", "totalAmount"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
        {
            "path": "/users/{userId}",
            "definition": {
                "description": "Stores all user profiles, whether they are Buyers, Workers, or Super Admins. The 'role' field differentiates them.",
                "schema": {
                    "oneOf": [
                        { "$ref": "#/backend/entities/Buyer" },
                        { "$ref": "#/backend/entities/Worker" },
                        { "$ref": "#/backend/entities/SuperAdmin" }
                    ]
                }
            }
        },
        {
            "path": "/medicines/{medicineId}",
            "definition": {
                "description": "The master catalog of all available medicines.",
                "schema": { "$ref": "#/backend/entities/Medicine" }
            }
        },
        {
            "path": "/orders/{orderId}",
            "definition": {
                "description": "Collection for all orders placed on the platform. Security rules will control access based on user role (Buyer, Worker, Super Admin).",
                "schema": { "$ref": "#/backend/entities/Order" }
            }
        }
    ]
  }
}
